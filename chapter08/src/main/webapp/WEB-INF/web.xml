<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	     http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>Example2</servlet-name>
        <servlet-class>org.chapter08.ex1.Example2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Example3</servlet-name>
        <servlet-class>org.chapter08.ex1.Example3</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Example4</servlet-name>
        <servlet-class>org.chapter08.ex1.Example4</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Postform</servlet-name>
        <servlet-class>org.chapter08.ex1.PostForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Example2</servlet-name>
        <url-pattern>/example2.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Example3</servlet-name>
        <url-pattern>/example3.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Example4</servlet-name>
        <url-pattern>/example4</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Postform</servlet-name>
        <url-pattern>/Postform.do</url-pattern>
    </servlet-mapping>

</web-app>